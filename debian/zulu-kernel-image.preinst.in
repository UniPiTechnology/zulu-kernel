#!/bin/sh
# preinst script for zulu-kernel
#
# see: dh_installdeb(1)

set -e

export INITRD=Yes
if [ -d "/etc/kernel/preinst.d" ]; then
    run-parts -v --report --exit-on-error --arg=#KERNELRELEASE# --arg=/boot/vmlinux-#KERNELRELEASE# /etc/kernel/preinst.d
fi

if [ -f /boot/boot.cmd ]; then
	cat /boot/boot.cmd >/boot/boot.cmd.dpkgback
fi

case "$1" in
    install)
		mkdir -p /etc/bootcmd.d
		touch /etc/bootcmd.d/disable-iqrf
		touch /etc/bootcmd.d/disable-485-on-ttyS0
		touch /etc/bootcmd.d/enable-1wmaster
	;;

	upgrade)
    ;;

    abort-upgrade)
    ;;

    *)
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0

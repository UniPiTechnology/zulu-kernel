Subject: [PATCH 08/12] Support for mirroing to Github

---
 .gitignore     | 1 +
 .gitlab-ci.yml | 7 +++++++
 2 files changed, 8 insertions(+)
 create mode 100644 .gitlab-ci.yml

diff --git a/.gitignore b/.gitignore
index 7afd412da..559015157 100644
--- a/.gitignore
+++ b/.gitignore
@@ -96,6 +96,7 @@ modules.order
 !.gitattributes
 !.gitignore
 !.mailmap
+!.gitlab-ci.yml
 
 #
 # Generated include files
diff --git a/.gitlab-ci.yml b/.gitlab-ci.yml
new file mode 100644
index 000000000..8362e095f
--- /dev/null
+++ b/.gitlab-ci.yml
@@ -0,0 +1,7 @@
+include:
+    project: docker/template
+    file: debian-pkg-ng.yaml
+variables:
+    disable_build: "true"
+    mirror_to_github: "true"
+
